#!/usr/bin/env bash
#Too many to count
PIDFILE="/var/run/myscript.pid"

# Cleanup handler
clean_up() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit
}

# Signal traps
trap clean_up SIGTERM
trap clean_up SIGQUIT
trap 'echo "Y U no love me?!"' SIGINT

# Save PID
echo $$ > "$PIDFILE"

# Infinite output loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
