#!/usr/bin/env bash
#Too many to count
clean_up() {
    echo "I hate the kill command"
    rm -f /var/run/myscript.pid
    exit
}

# Trap signals (define AFTER the function!)
trap clean_up SIGTERM   # 15
trap clean_up SIGQUIT   # 3
trap 'echo "Y U no love me?!"' SIGINT  # 2

# Write PID to file
echo $$ > /var/run/myscript.pid

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
